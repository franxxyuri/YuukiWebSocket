<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模拟测试页面 - 功能测试中心"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态: 未连接模拟服务器"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- 模拟服务器设置 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="模拟服务器设置:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/mock_server_ip_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="模拟服务器IP (例如: 192.168.124.18)"
            android:inputType="text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/mock_server_port_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="模拟服务器端口 (例如: 8928)"
            android:inputType="number"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/connect_mock_server_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="连接模拟服务器"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/disconnect_mock_server_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="断开服务器连接"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 功能测试区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="功能测试:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 屏幕捕获 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/start_screen_capture_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="启动屏幕捕获"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/stop_screen_capture_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="停止屏幕捕获"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- 远程控制 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/start_remote_control_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="启动远程控制"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/stop_remote_control_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="停止远程控制"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- 文件传输 -->
        <Button
            android:id="@+id/start_file_transfer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启动文件传输测试"
            android:layout_marginBottom="8dp" />

        <!-- 剪贴板同步 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/start_clipboard_sync_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="启动剪贴板同步"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/stop_clipboard_sync_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="停止剪贴板同步"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- 通知同步 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/check_notification_permission_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="检查通知权限"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/start_notification_sync_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="启动通知同步"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/stop_notification_sync_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="停止通知同步"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/send_mock_notification_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发送模拟通知"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 日志显示 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试日志:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/log_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试日志将显示在这里\n"
            android:textSize="12sp"
            android:scrollbars="vertical" />

    </ScrollView>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/clear_log_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空日志"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回主界面"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</LinearLayout>
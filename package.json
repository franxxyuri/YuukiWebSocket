{
  "name": "windows-android-connect",
  "version": "1.0.0",
  "description": "一个功能完整的Windows-Android局域网互联软件",
  "author": "Developer",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "node backend/scripts/complete-server.js",
    "dev": "node backend/scripts/complete-server.js",
    "dev:vite": "vite --config backend/config/vite-config.js",
    "dev:integrated": "node backend/scripts/integrated-vite-server.js",
    "dev:config": "node -r dotenv/config backend/scripts/complete-server.js",
    "start:config": "node -r dotenv/config backend/scripts/complete-server.js",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node backend/scripts/complete-server.js",
    "server:ports": "SERVER_PORT=${SERVER_PORT:-8928} VITE_PORT=${VITE_PORT:-8781} DISCOVERY_PORT=${DISCOVERY_PORT:-8190} NETWORK_COMM_PORT=${NETWORK_COMM_PORT:-8826} node backend/scripts/complete-server.js",
    "install:android": "cd app && ./gradlew build",
    "test": "node test-runner.js",
    "test:server": "node test-server-functions.js",
    "test:environment": "start-test-environment-en.bat",
    "check:server": "node check-server-status.js",
    "lint": "eslint *.js *.jsx",
    "clean": "del /s /q node_modules",
    "android-build": "cd app && ./gradlew build",
    "check-deps": "npm list --depth=0"
  },
  "keywords": [
    "react",
    "android",
    "remote-control",
    "file-transfer",
    "screen-mirror",
    "cross-platform",
    "vite"
  ],
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^25.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "vite": "^6.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/windows-android-connect.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/windows-android-connect/issues"
  },
  "homepage": "https://github.com/your-username/windows-android-connect#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ws": "^8.18.0"
  }
}
